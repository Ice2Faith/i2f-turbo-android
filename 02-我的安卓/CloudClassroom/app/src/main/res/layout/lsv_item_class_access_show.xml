<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/hor_weight_left"
            android:gravity="center_vertical"
            android:text="@string/person_name" />

        <TextView
            android:id="@+id/textViewSelectSname"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/hor_weight_right"
            android:text="@string/person_name"
            android:inputType="textPersonName"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/hor_weight_left"
            android:gravity="center_vertical"
            android:text="@string/student_no" />

        <TextView
            android:id="@+id/textViewSelectSno"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/hor_weight_right"
            android:inputType="textPersonName"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/hor_weight_left"
            android:gravity="center_vertical"
            android:text="@string/time" />

        <TextView
            android:id="@+id/textViewSelectTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/hor_weight_right"
            android:inputType="textPersonName"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/hor_weight_left"
            android:gravity="center_vertical"
            android:text="@string/score" />

        <TextView
            android:id="@+id/textViewSelectScore"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/hor_weight_right"
            android:inputType="textPersonName"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/hor_weight_left"
            android:gravity="center_vertical"
            android:text="@string/session" />

        <TextView
            android:id="@+id/textViewSelectSession"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/hor_weight_right"
            android:inputType="textPersonName"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/hor_weight_left"
            android:gravity="center_vertical"
            android:text="@string/other" />

        <TextView
            android:id="@+id/textViewSelectOther"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@integer/hor_weight_right"
            android:inputType="textPersonName"/>

    </LinearLayout>
</LinearLayout>