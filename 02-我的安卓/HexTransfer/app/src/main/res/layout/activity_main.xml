                android:text="R"
                />

            <Button
                android:id="@+id/button_NumS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S"
                />

            <Button
                android:id="@+id/button_NumT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T"
                />

            <Button
                android:id="@+id/button_NumU"
                android:layout_width="wrap_content"
