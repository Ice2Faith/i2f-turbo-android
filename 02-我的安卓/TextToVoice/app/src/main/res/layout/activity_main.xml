<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextWords"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9.0"
            android:ems="10"
            android:gravity="start|top"
            android:hint="@string/edittextTips"
            android:inputType="textMultiLine"
            android:overScrollMode="ifContentScrolls"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">
            <Button
                android:id="@+id/buttonPaste"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="@string/btnPaste"
                android:background="@color/colorBtnPaste"
                />
            <Button
                android:id="@+id/buttonVary"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="@string/btnVary"
                android:background="@color/colorBtnVary"
                />
            <Button
                android:id="@+id/buttonStop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="@string/btnStop"
                android:background="@color/colorBtnStop"
                />
            <Button
                android:id="@+id/buttonClear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:text="@string/btnClear"
                android:background="@color/colorBtnClear"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>