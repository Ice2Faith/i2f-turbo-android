<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.HelloPageActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Chronometer
            android:id="@+id/chronometerTimer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/imageViewHelloImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@mipmap/ic_launcher" />
        <com.ugex.savelar.excompositedesign.Controls.AnimatePaintView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ani_ball_count="@integer/hello_page_ball_count"/>

        <TextView
            android:id="@+id/textViewHelloTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:layout_marginTop="@dimen/hello_page_tvtimer_margin_top"
            android:layout_marginRight="@dimen/hello_page_tvtimer_margin_right"
            style="@style/TextAppearance.AppCompat.Large"
            android:text="还有3秒进入" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>