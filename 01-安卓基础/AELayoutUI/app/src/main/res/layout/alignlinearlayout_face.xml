<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/alignlnrlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/checkBox_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/align_top" />

    <CheckBox
        android:id="@+id/checkBox_buttom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/align_buttom" />

    <CheckBox
        android:id="@+id/checkBox_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/align_left" />

    <CheckBox
        android:id="@+id/checkBox_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/align_right" />

    <CheckBox
        android:id="@+id/checkBox_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/align_center" />
</LinearLayout>