<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BroadcastServiceUseCase.CalculAvgScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextCHS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="语文成绩"
            android:inputType="numberDecimal"
            />
        <EditText
            android:id="@+id/editTextMTS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="数学成绩"
            android:inputType="numberDecimal"
            />
        <EditText
            android:id="@+id/editTextEGS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="英语成绩"
            android:inputType="numberDecimal"
            />

        <Button
            android:id="@+id/buttonCalcul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计算"
            android:onClick="CalculAvgScoreProc"/>

        <EditText
            android:id="@+id/editTextAVGS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="平均成绩"
            android:inputType="numberDecimal"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>