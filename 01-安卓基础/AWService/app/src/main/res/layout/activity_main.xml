<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonServiceTestStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="启动服务"
            android:onClick="serviceTestStart"/>

        <Button
            android:id="@+id/buttonServiceTestStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止服务"
            android:onClick="serviceTestStop"/>

        <Button
            android:id="@+id/buttonServiceTestBind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绑定服务"
            android:onClick="serviceTestBind"/>

        <Button
            android:id="@+id/buttonServiceTestUnbind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消绑定服务"
            android:onClick="serviceTestUnbind"/>
        <Button
            android:id="@+id/buttonServiceCalcuAvg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计算平均分"
            android:onClick="serviceCalculAvg"/>
        <Button
            android:id="@+id/buttonServiceSystem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="系统服务"
            android:onClick="serviceSystemActivi"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>