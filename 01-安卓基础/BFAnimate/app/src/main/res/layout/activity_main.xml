<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewFrameAnim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/anim_frame" />

        <Button
            android:id="@+id/buttonStartAnim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始动画"
            android:onClick="onBtnStartAnimClicked"/>

        <Button
            android:id="@+id/buttonStopAnim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止动画"
            android:onClick="onBtnStopAnimClicked"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageViewSpinAnim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher_foreground" />

            <ImageView
                android:id="@+id/imageViewAlphaAnim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher" />
            <ImageView
                android:id="@+id/imageViewUniversalAnim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_background" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonValueAnimate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ValueAnimate"
            android:onClick="onBtnValueAnimateClicked"/>

        <Button
            android:id="@+id/buttonObjectAnimate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ObjectAnimate"
            android:onClick="onBtnObjectAnimateClicked"/>

        <ImageView
            android:id="@+id/imageViewAttrAnim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>