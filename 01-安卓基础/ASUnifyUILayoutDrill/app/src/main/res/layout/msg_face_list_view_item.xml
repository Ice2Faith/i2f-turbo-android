<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/MsgFaceImgLeftMargin"
        android:layout_marginRight="@dimen/MsgFaceImgRightMargin"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Large"
            android:text="TextView" />

        <TextView
            android:id="@+id/textViewSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/MsgFaceListItemSmallTextFontSize"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>