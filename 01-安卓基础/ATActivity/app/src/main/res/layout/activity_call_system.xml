<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallSystemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonWebBrowser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="调用浏览器"
            android:onClick="SysCallWebBrowser"/>

        <Button
            android:id="@+id/buttonMap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="调用地图"
            android:onClick="SysCallMapApp"/>

        <Button
            android:id="@+id/buttonPhoneFace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拨打电话页面"
            android:onClick="SysCallPhoneFace"/>

        <Button
            android:id="@+id/buttonCallPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="直接拨打电话"
            android:onClick="SysCallDirectCallTel"/>

        <Button
            android:id="@+id/buttonUninstallPack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="卸载软件"
            android:onClick="SysCallUninstallApp"/>

        <Button
            android:id="@+id/buttonInstallPack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="安装软件"
            android:onClick="SysCallInstallApp"/>

        <Button
            android:id="@+id/buttonPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="播放"
            android:onClick="SysCallPlayMedia"/>

        <Button
            android:id="@+id/buttonMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开邮件"
            android:onClick="SysCallOpenMail"/>

        <Button
            android:id="@+id/buttonSendMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发邮件"
            android:onClick="SysCallDirectSendMail"/>

        <Button
            android:id="@+id/buttonSMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开短信"
            android:onClick="SysCallOpenSMS"/>

        <Button
            android:id="@+id/buttonSendSMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发短信"
            android:onClick="SysCallDirectSendSMS"/>

        <Button
            android:id="@+id/buttonSendRichSMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送彩信"
            android:onClick="SysCallDirectSendRichSMS"/>

        <Button
            android:id="@+id/buttonCaptureCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拍摄一张照片"
            android:onClick="SysCallCaptureCamera"/>

        <ImageView
            android:id="@+id/imageViewCamera"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>