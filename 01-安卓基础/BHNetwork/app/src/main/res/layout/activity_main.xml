<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonNetClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="网络编程中的常用类"
            android:onClick="onBtnNetworkClassesClicked"/>

        <Button
            android:id="@+id/buttonFileUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文件的上传"
            android:onClick="onBtnFileUploadClicked"/>

        <Button
            android:id="@+id/buttonFileDownlaod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文件的下载"
            android:onClick="onBtnFileDownloadClicked"/>

        <Button
            android:id="@+id/buttonSocketProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Socket编程"
            android:onClick="onBtnSocketProgramClicked"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>