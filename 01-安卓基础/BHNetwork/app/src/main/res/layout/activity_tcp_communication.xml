<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TcpService.TcpCommunicationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextServerSend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:ems="10"
            android:gravity="start|top"
            android:hint="服务器发送数据输入框"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/buttonServerSend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="服务器发送"
            android:onClick="onBtnServerSendMsgClicked"/>

        <EditText
            android:id="@+id/editTextClientSend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:ems="10"
            android:gravity="start|top"
            android:hint="客户端发送数据输入框"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/buttonClientSend"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="客户端发送"
            android:onClick="onBtnClientSendMsgClicked"/>

        <EditText
            android:id="@+id/editTextInfo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:ems="10"
            android:gravity="start|top"
            android:hint="历史记录框"
            android:inputType="textMultiLine" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>