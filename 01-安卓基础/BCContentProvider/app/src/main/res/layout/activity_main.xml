<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonSysContentProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="系统ContentProvider"
            android:onClick="OnSysContentProvider"/>

        <Button
            android:id="@+id/buttonUserContentProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="自定义ContentProvider"
            android:onClick="OnUserContentProvider"/>

        <Button
            android:id="@+id/buttonContentObserver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用ContentObserver监听新短信"
            android:onClick="OnUseContenObserver"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>