<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Audio.AudioTestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editTextFileNameAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入音频文件路径"
            android:inputType="textPersonName"
            android:text="test.mp3" />

        <Button
            android:id="@+id/buttonPlayAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="播放"
            android:onClick="onBtnPlayAudioClicked"/>

        <Button
            android:id="@+id/buttonPauseAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="暂停"
            android:onClick="onBtnPauseAudioClicked"/>

        <Button
            android:id="@+id/buttonStopAudio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止"
            android:onClick="onBtnStopAudioClicked"/>

        <ListView
            android:id="@+id/listViewSdMusic"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>