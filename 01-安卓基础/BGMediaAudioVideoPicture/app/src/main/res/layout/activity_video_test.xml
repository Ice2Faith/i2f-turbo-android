<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Video.VideoTestActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <EditText
            android:id="@+id/editTextFileNameVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="请输入视频文件路径"
            android:inputType="textPersonName"
            android:text="test.mp4" />

        <Button
            android:id="@+id/buttonVideoViewPlayVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用VideoView播放"
            android:onClick="onBtnUseVideoViewPlayClicked"/>

        <Button
            android:id="@+id/buttonMediaPlayerPlayVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="使用MediaPlayer播放"
            android:onClick="onBtnUseMediaPlayerPlayClicked"/>

        <ListView
            android:id="@+id/listViewSdVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>